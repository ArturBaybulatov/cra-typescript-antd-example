{
  "extends": [
    "react-app",
    "react-app/jest",
    "airbnb-typescript",
    "prettier",
    "prettier/@typescript-eslint",
    "prettier/react"
  ],

  "parserOptions": {
    "project": "./tsconfig.json"
  },

  "rules": {
    "@typescript-eslint/no-shadow": "off",
    "import/no-extraneous-dependencies": "off",
    "react/jsx-props-no-spreading": "off",
    "react/react-in-jsx-scope": "off"
  }
}
